<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAC06B"
    tools:context=".expen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/d">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="346dp"
            android:layout_height="503dp"
            android:layout_marginBottom="96dp"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.446"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintVertical_bias="0.263">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="115dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="تومان"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/mablagh"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/coin"
                    android:ems="10"
                    android:gravity="center|right"
                    android:hint="مبلغ"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/daste"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableRight="@drawable/push"
                android:ems="10"
                android:gravity="center|right"
                android:hint="دسته بندی"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableRight="@drawable/wallet2"
                android:gravity="center|right"
                android:text="حساب خانه ما"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="346dp"
                android:layout_height="93dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableRight="@drawable/calendar"
                android:ems="10"
                android:gravity="center|right"
                android:hint="تاریخ"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextTextPersonName5"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:drawableRight="@drawable/file"
                android:ems="10"
                android:hint="توضیحات"
                android:inputType="textPersonName" />

        </LinearLayout>

        <Button
            android:id="@+id/button6"
            android:layout_width="118dp"
            android:layout_height="53dp"
            android:backgroundTint="#CDB123"
            android:text="ثبت درامد"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintVertical_bias="0.809" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>